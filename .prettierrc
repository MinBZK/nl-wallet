{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": false,
    "proseWrap": "always",
    "overrides": [
        {
            "files": ["*.md"],
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": ["*.xml", "*.yml", "*.yaml", "*.mjs", "*.js", "*.json", "*.json.template", "*.ts", "*.vue"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
