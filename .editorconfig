# https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
max_line_length = 80

[*.dart]
indent_size = 2

[Fastfile]
indent_size = 2

[{*.xml,*.yml,*.yaml,*.mjs,*.js,*.json,*.json.template,*.ts,*.css,*.html,*.vue,*.askama}]
indent_size = 2

[*.plist]
indent_style = tab
