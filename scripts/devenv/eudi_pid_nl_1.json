        "simple": {
          "background_color": "#C7E8EE",
          "text_color": "#152A62"
        }
      }
    },
    {
      "lang": "nl-NL",
      "name": "Persoonsgegevens",
      "description": "De Nederlandse persoonsgegevensattestatie",
      "summary": "{{given_name}}",
      "rendering": {
        "simple": {
          "background_color": "#C7E8EE",
          "text_color": "#152A62"
        }
      }
    }
  ],
  "claims": [
    {
      "path": ["family_name"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Achternaam",
          "description": "Achternaam van de persoon, inclusief voorvoegsels"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["given_name"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Voornaam",
          "description": "Voornaam van de persoon"
        }
      ],
      "sd": "always",
      "svg_id": "given_name"
    },
    {
      "path": ["birthdate"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Geboortedatum",
          "description": "Geboortedatum van de persoon"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["age_over_18"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "18+",
          "description": "Of de persoon 18+ is"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["nationalities"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Nationaliteiten",
          "description": "Lijst van nationaliteiten van de persoon"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["bsn"],
      "display": [
        {
          "lang": "en-US",
          "label": "BSN",
