      "sd": "always"
    },
    {
      "path": ["address", "postal_code"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Postcode",
          "description": "Postcode van het adres"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["address", "locality"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Stad",
          "description": "Stad van het adres"
        }
