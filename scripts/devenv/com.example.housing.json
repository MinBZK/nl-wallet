  "schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Housing VCT Schema",
    "description": "The JSON schema that defines a housing VCT",
    "type": "object",
    "properties": {
      "vct": {
        "type": "string"
      },
      "vct#integrity": {
        "type": "string"
      },
      "iss": {
        "type": "string"
      },
      "nbf": {
        "type": "number"
      },
      "exp": {
        "type": "number"
      },
      "cnf": {
        "type": "object"
      },
      "status": {
        "type": "object"
      },
      "sub": {
        "type": "string"
      },
      "iat": {
        "type": "number"
      },
      "attestation_qualification": {
        "type": "string"
      },
      "rent": {
        "type": "string"
      },
      "service_charges": {
        "type": "string"
      },
      "eligible_service_charges": {
        "type": "string"
      },
      "rental_object": {
        "type": "object",
        "properties": {
          "bag_id": {
            "type": "string"
          },
          "street_name": {
            "type": "string"
          },
          "house_number": {
            "type": "string"
          },
          "house_number_suffix": {
            "type": ["null", "string"]
          },
          "room_number": {
            "type": ["null", "string"]
          },
          "zip_code": {
            "type": "string"
          },
          "city": {
            "type": "string"
          }
        },
        "required": ["bag_id", "street_name", "house_number", "zip_code", "city"]
      },
      "rental_contract": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date"
          },
          "end_date": {
            "type": ["null", "string"],
            "format": "date"
          },
          "duration_in_months": {
            "type": "integer"
          }
        },
        "required": ["start_date"]
      },
      "rental_organization": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "kvk_number": {
            "type": "string"
          }
        },
        "required": ["name", "kvk_number"]
      }
    },
    "required": [
      "vct",
      "iss",
      "attestation_qualification",
      "rent",
      "service_charges",
      "eligible_service_charges",
      "rental_object",
      "rental_contract",
      "rental_organization"
    ]
