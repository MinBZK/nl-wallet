{
  "usecase": "xyz_bank",
  "dcql_query": {
    "credentials": [
      {
        "id": "my_pid",
        "format": "mso_mdoc",
        "meta": { "doctype_value": "com.example.pid" },
        "claims": [
          { "path": ["com.example.pid", "given_name"], "intent_to_retain": true },
          { "path": ["com.example.pid", "family_name"], "intent_to_retain": true },
          { "path": ["com.example.pid", "own_family_name"], "intent_to_retain": true },
          { "path": ["com.example.pid", "given_name_birth"], "intent_to_retain": true },
          { "path": ["com.example.pid", "family_name_birth"], "intent_to_retain": true },
          { "path": ["com.example.pid", "gender"], "intent_to_retain": true },
          { "path": ["com.example.pid", "birth_date"], "intent_to_retain": true },
          { "path": ["com.example.pid", "age_over_18"], "intent_to_retain": true },
          { "path": ["com.example.pid", "birth_place"], "intent_to_retain": true },
          { "path": ["com.example.pid", "birth_city"], "intent_to_retain": true },
          { "path": ["com.example.pid", "birth_state"], "intent_to_retain": true },
          { "path": ["com.example.pid", "birth_country"], "intent_to_retain": true },
          { "path": ["com.example.pid", "has_spouse_or_partner"], "intent_to_retain": true },
          { "path": ["com.example.pid", "bsn"], "intent_to_retain": true }
        ]
      },
      {
        "id": "my_addr",
        "format": "mso_mdoc",
        "meta": { "doctype_value": "com.example.pid" },
        "claims": [
          { "path": ["com.example.addr", "resident_address"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_street"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_house_number"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_postal_code"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_city"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_state"], "intent_to_retain": true },
          { "path": ["com.example.addr", "resident_country"], "intent_to_retain": true }
        ]
      }
    ]
  },
  "return_url_template": "${RELYING_PARTY_URL}/xyz_bank/"
}
