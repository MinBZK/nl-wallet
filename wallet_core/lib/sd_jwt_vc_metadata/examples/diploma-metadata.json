{
  "vct": "com.example.diploma",
  "name": "Dummy Diploma Credential",
  "description": "Dummy version of a diploma credential",
  "display": [
    {
      "lang": "en-US",
      "name": "Dummy Diploma",
      "description": "A dummy diploma credential"
    },
    {
      "lang": "nl-NL",
      "name": "Dummy Diploma",
      "description": "Een dummy diploma attestatie"
    }
  ],
  "claims": [
    {
      "path": ["university"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Universiteit",
          "description": "Universiteit waar het diploma is behaald"
        },
        {
          "lang": "en-US",
          "label": "University",
          "description": "University where the diploma was obtained"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["study"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Studie",
          "description": "Naam van de studie"
        },
        {
          "lang": "en-US",
          "label": "Study",
          "description": "Name of the study"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["graduation_date"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Afstudeerdatum",
          "description": "Datum waarop het diploma is behaald"
