        {
          "lang": "en-US",
          "label": "Graduation date",
          "description": "Date on which the diploma was obtained"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["grade"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Cijfer",
          "description": "Cijfer waarmee het diploma is behaald"
        },
        {
          "lang": "en-US",
          "label": "Grade",
          "description": "Grade with which the diploma was obtained"
        }
      ],
      "sd": "always"
    },
    {
      "path": ["cum_laude"],
      "display": [
        {
          "lang": "nl-NL",
          "label": "Cum Laude",
          "description": "Of het diploma cum laude is behaald"
        },
        {
          "lang": "en-US",
          "label": "Cum Laude",
          "description": "Whether the diploma was obtained cum laude"
        }
      ],
      "sd": "always"
    }
  ],
  "schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Dummy diploma VCT Schema",
    "description": "The JSON schema that defines a dummy diploma VCT",
    "type": "object",
    "properties": {
      "university": {
        "type": "string"
      },
      "study": {
        "type": "string"
      },
      "graduation_date": {
        "type": "string",
        "format": "date"
      },
      "grade": {
        "type": "string"
      },
      "cum_laude": {
        "type": "boolean"
      },
      "vct": {
        "type": "string"
      },
      "vct#integrity": {
        "type": "string"
      },
      "iss": {
        "type": "string"
      },
      "iat": {
        "type": "number"
      },
      "exp": {
        "type": "number"
      },
      "nbf": {
        "type": "number"
      },
      "attestation_qualification": {
        "type": "string"
      }
    },
    "required": ["vct", "iss", "iat", "exp", "attestation_qualification"]
  }
}
