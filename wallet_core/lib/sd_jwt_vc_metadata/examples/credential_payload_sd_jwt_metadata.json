{
  "vct": "https://bmi.bund.example/credential/pid/1.0",
  "name": "Credential Payload SD-JWT",
  "description": "Credential Payload SD-JWT",
  "display": [
    {
      "lang": "en-US",
      "name": "Example PID",
      "description": "Example PID"
    }
  ],
  "claims": [
    {
      "path": ["birth_date"]
    },
    {
      "path": ["place_of_birth", "locality"]
    },
    {
      "path": ["place_of_birth", "country", "name"]
    },
    {
      "path": ["place_of_birth", "country", "area_code"]
    }
  ],
  "schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "SD-JWT-based Verifiable Credentials (SD-JWT VC) Schema",
    "description": "The JSON schema that defines the SD-JWT-based Verifiable Credentials VCT",
    "type": "object",
    "properties": {
      "vct": {
        "type": "string"
      },
      "vct#integrity": {
        "type": "string"
      },
      "iss": {
        "type": "string"
      },
      "iat": {
        "type": "number"
      },
      "nbf": {
        "type": "number"
      },
      "exp": {
        "type": "number"
      },
      "cnf": {
        "type": "object"
      },
      "status": {
        "type": "object"
      },
      "attestation_qualification": {
        "type": "string"
      },
      "birth_date": {
        "type": "string",
        "format": "date"
      },
      "place_of_birth": {
        "type": "object",
        "properties": {
          "locality": {
            "type": "string"
          },
          "county": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "area_code": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "required": ["vct", "iss", "iat", "cnf", "status", "attestation_qualification"],
    "additionalProperties": false
  }
}
